{
  "name": "Share with Teams",
  "version": "1.0.0.0",
  "manifest_version": 2,
  "description": "Share web sites with your team through posting messages in Microsoft Teams",
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icons/teams_share_16x16.png",
    "32": "icons/teams_share_32x32.png",
    "48": "icons/teams_share_48x48.png",
    "128": "icons/teams_share_128x128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "icons/teams_share_16x16.png",
      "32": "icons/teams_share_32x32.png",
      "48": "icons/teams_share_48x48.png",
      "128": "icons/teams_share_128x128.png"
    },
    "default_popup": "window.html"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "identity",
    "storage",
    "https://graph.microsoft.com/",
    "<all_urls>"
  ]
}